<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- BasisStyle der App -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>

    <item name="windowActionModeOverlay">true</item>
  </style>

  <!-- Splashscreen -->
  <style name="AppTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#151515</item>
    <item name="colorPrimaryDark">#000000</item>
    <item name="colorAccent">#ffffff</item>

    <item name="android:windowBackground">@drawable/bg_activity_splash</item>

    <item name="android:statusBarColor" tools:targetAPI="23">#000000</item>
    <item name="android:windowLightStatusBar" tools:targetAPI="23">false</item>
  </style>

  <!-- Textstyles -->
  <style name="Text.AppTitle.Top" parent="TextAppearance.AppCompat">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">20dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text.AppTitle.Bottom" parent="TextAppearance.AppCompat">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">14dp</item>
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="Text.AppTitle" parent="TextAppearance.AppCompat">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">20dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="Text.Subhead.Main" parent="TextAppearance.AppCompat">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">20dp</item>
    <item name="android:fontFamily">sans-serif-smallcaps</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="Text.List.Title" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/text_list_title</item>
    <item name="android:textSize">16dp</item>
    <item name="android:fontFamily">sans-serif</item>
    <!--<item name="android:textStyle">bold</item>-->
  </style>
  <style name="Text.List.Overline" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/text_list_overline</item>
    <item name="android:textSize">10dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:letterSpacing">0.05</item>
  </style>
  <style name="Text.List.Underline" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/text_list_title</item>
    <item name="android:textSize">11dp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:letterSpacing">0.05</item>
  </style>
  <style name="Text.List.Subtitle" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/text_list_subtitle</item>
    <item name="android:textSize">16dp</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="Text.Input.Error" parent="TextAppearance.AppCompat">
    <item name="android:textColor">#cc4515</item>
  </style>
  
</resources>